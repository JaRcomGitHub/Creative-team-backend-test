        },
        "responses": {
          "200": {
            "description": "OK \"Successful operation\"",
            "content": {
              "application/json": {
                "schema": {
                  "title": "200",
                  "type": "object",
                  "properties": {
                    "data": {
                      "example": {
                        "token": "token",
                        "user": "user@email.com"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request (one of the \"message\")",
            "content": {
              "application/json": {
                "schema": {
                  "title": "400",
                  "type": "object",
                  "example": [
                    {
                      "message": "Please, provide all required fields"
                    },
                    {
                      "message": "Unable to set token"
                    }
                  ]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "title": "401",
                  "type": "object",
                  "example": {
                    "message": "Email or password is wrong"
                  }
                }
              }
            }
          }
        }
      }
    },
